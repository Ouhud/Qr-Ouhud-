{
  // ğŸ Pfad zum Python-Interpreter (virtuelle Umgebung)
  "python.defaultInterpreterPath": "venv/bin/python",

  // ğŸ“ Suchpfade fÃ¼r Import-AuflÃ¶sung (Models, Routes, Utils etc.)
  "python.analysis.extraPaths": [
    "./",
    "./models",
    "./routes",
    "./utils"
  ],

  // ğŸ’¡ AutovervollstÃ¤ndigung fÃ¼r Importe aktivieren
  "python.autoComplete.extraPaths": [
    "./",
    "./models",
    "./routes",
    "./utils"
  ],

  // ğŸ§  Intelligente Analyse & automatische Typ-Ableitung
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.useLibraryCodeForTypes": true,

  // ğŸš« Ordner ausschlieÃŸen (z. B. virtuelle Umgebung, Cache)
  "python.analysis.exclude": [
    "**/venv/**",
    "**/__pycache__/**",
    "**/.mypy_cache/**",
    "**/.pytest_cache/**"
  ],

  // âš™ï¸ Pylance-Warnungen, die ignoriert werden sollen
  "python.analysis.ignore": [
    "reportPrivateUsage",
    "reportUnknownVariableType",
    "reportUnknownMemberType",
    "reportMissingParameterType",
    "reportUnknownArgumentType"
  ],

  // ğŸŸ¢ Warnschweregrad anpassen (ALLE stÃ¶renden Meldungen deaktivieren)
"python.analysis.diagnosticSeverityOverrides": {
    "reportMissingTypeStubs": "none",        // ğŸ”‡ Stub-Warnung ausschalten
    "reportAttributeAccessIssue": "none",
    "reportUnknownVariableType": "none",
    "reportUnknownMemberType": "none",
    "reportUnknownArgumentType": "none",
    "reportMissingParameterType": "none",
    "reportUnusedImport": "none",
    "reportUnnecessaryComparison": "none",
    "reportArgumentType": "none"
},


  // ğŸ’¡ Verbesserte Formatierung und Code-QualitÃ¤t
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "ms-python.black-formatter",

  // ğŸš€ Optional: FastAPI-Auto-Reload Debug
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}"
  },

  // ğŸ“¦ Automatische Aktivierung des virtuellen Environments
  "python.terminal.activateEnvironment": true
}

